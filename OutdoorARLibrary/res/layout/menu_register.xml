<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layoutAnimation="@anim/layout_animation_table"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:stretchColumns="1" android:gravity="center" android:background="@color/white">
	<TableLayout android:layoutAnimation="@anim/layout_animation_table"
		android:animationCache="false" android:clipToPadding="false"
		android:padding="12dp" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:stretchColumns="1"
		android:background="@drawable/markerbordermap" android:gravity="center"
		android:layout_margin="10dip">
		<RelativeLayout android:layout_height="wrap_content"
			android:gravity="center" android:padding="5dip" android:id="@+id/RelativeLayoutHead"
			android:layout_width="wrap_content">
			<RelativeLayout android:layout_width="wrap_content"
				android:id="@+id/RelativeLayoutImageView" android:gravity="left|center_vertical"
				android:layout_height="wrap_content">
				<ImageView android:id="@+id/ImageViewLogo"
					android:background="@drawable/and_clear" android:layout_height="40dip"
					android:layout_width="30dip"></ImageView>
			</RelativeLayout>
			<RelativeLayout android:id="@+id/RelativeLayout08"
				android:layout_width="fill_parent" android:gravity="right|center_vertical"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/TextView01"
					android:layout_width="wrap_content" android:textSize="13dip"
					android:textStyle="bold" android:gravity="center_vertical"
					android:text="AndroidAR - Login" android:layout_height="wrap_content"
					android:textColor="@color/white"></TextView>
			</RelativeLayout>
		</RelativeLayout>





		<RelativeLayout android:layout_height="fill_parent"
			android:layout_width="fill_parent" android:gravity="center"
			android:id="@+id/RelativeLayoutButtonsEqual">

			<TextView android:id="@+id/result" android:layout_height="wrap_content"
				android:layout_width="fill_parent" android:layout_gravity="center"
				android:gravity="center" android:textColor="@color/white"
				android:textSize="13dip" android:textStyle="bold|italic"></TextView>
			<EditText android:id="@+id/username" android:hint="Username"
				android:layout_width="fill_parent" android:layout_marginLeft="20dip"
				android:layout_marginRight="20dip" android:layout_height="wrap_content"
				android:layout_below="@+id/result" />
			<EditText android:id="@+id/password" android:hint="Password"
				android:password="true" android:layout_width="fill_parent"
				android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
				android:layout_height="wrap_content" android:layout_below="@+id/username" />
			<LinearLayout android:id="@+id/LinearLayout01"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:layout_below="@+id/password">

				<Button android:layout_gravity="center_vertical|center_horizontal" android:layout_height="wrap_content" android:layout_weight="1" android:layout_width="0dip" android:padding="5dip" android:id="@+id/buttonLogin" android:text="Login">
				</Button><Button android:layout_height="wrap_content"
					android:visibility="visible" android:layout_weight="1"
					android:layout_gravity="center_vertical|center_horizontal"
					android:layout_width="0dip" android:padding="5dip" android:id="@+id/buttonBack" android:text="Cancel">
				</Button>
				
			</LinearLayout>
		</RelativeLayout>



	</TableLayout>
</RelativeLayout>
