	<TextView android:id="@+id/textView1" android:layout_width="match_parent"
		android:layout_height="wrap_content" 
		android:text="About"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<ScrollView
	    android:id="@+id/scrollView1"
