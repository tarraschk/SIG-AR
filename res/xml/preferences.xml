<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/pref_arview"
        android:layout="@layout/prefcategory"
        android:key="pref_key_arview">
        <CheckBoxPreference
            android:key="pref_key_compass"
            android:summary="@string/prefs_summ_arview1"
            android:title="Hide Compass"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="pref_key_grid"
            android:summary="@string/prefs_summ_arview2"
            android:title="Hide Grid"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="pref_key_light"
            android:summary="@string/prefs_summ_arview3"
            android:title="Disable default light"
            android:defaultValue="false" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/pref_database"
        android:layout="@layout/prefcategory"
        android:key="pref_key_database">
        <CheckBoxPreference
            android:key="pref_key_database1"
            android:summary="summary"
            android:title="title1"
            android:defaultValue="false" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/pref_about"
        android:layout="@layout/prefcategory"
        android:key="pref_key_about">
        <Preference
                android:title="About"
                android:summary="Click here to learn more about this project"
                android:key="readabout"/>
    </PreferenceCategory>
    
</PreferenceScreen>