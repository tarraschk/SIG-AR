<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/pref_arview"
        android:layout="@layout/prefcategory"
        android:key="pref_key_arview">
        <CheckBoxPreference
            android:key="pref_key_compass"
            android:summary="@string/prefs_summ_arview1"
            android:title="Hide Compass"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="pref_key_grid"
            android:summary="@string/prefs_summ_arview2"
            android:title="Hide Grid"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="pref_key_light"
            android:summary="@string/prefs_summ_arview3"
            android:title="Disable default light"
            android:defaultValue="false" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/pref_database"
        android:layout="@layout/prefcategory"
        android:key="pref_key_database">
       <EditTextPreference
            android:key="pref_db_name"
            android:summary="Set the database name"
            android:title="Database name" />
       <EditTextPreference
            android:key="pref_db_address"
            android:summary="Set your database address"
            android:title="Address" />
       <EditTextPreference
            android:key="pref_db_port"
            android:summary="Set the database port"
            android:title="Port" />
       <EditTextPreference
            android:key="pref_db_login"
            android:summary="Enter your login"
            android:title="Login" />
       <EditTextPreference
            android:key="pref_db_password"
            android:summary="Enter your password"
            android:password="true"
            android:title="Password" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/pref_about"
        android:layout="@layout/prefcategory"
        android:key="pref_key_about">
        <Preference
                android:title="About"
                android:summary="Click here to learn more about this project"
                android:key="readabout"/>
    </PreferenceCategory>
    
</PreferenceScreen>