<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory 
        android:title="@string/pref_arview"
        android:key="pref_key_arview">
        <CheckBoxPreference
            android:key="pref_key_compass"
            android:summary="Preference related to compass"
            android:title="Hide Compass"
            android:defaultValue="true" />
        <CheckBoxPreference
            android:key="pref_key_grid"
            android:summary="Preference related to grid"
            android:title="Hide Grid"
            android:defaultValue="false" />
        <CheckBoxPreference
            android:key="pref_key_light"
            android:summary="Preference related to light"
            android:title="Disable default light"
            android:defaultValue="false" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/pref_database"
        android:key="pref_key_database">
        <CheckBoxPreference
            android:key="pref_key_database1"
            android:summary="summary"
            android:title="title1"
            android:defaultValue="false" />
    </PreferenceCategory>
    
    <PreferenceCategory 
        android:title="@string/pref_about"
        android:key="pref_key_about">
         <PreferenceScreen
            android:key="pref_key_about"
            android:title="About"
            android:layout="@layout/dialog_about" />
    </PreferenceCategory>
    
</PreferenceScreen>